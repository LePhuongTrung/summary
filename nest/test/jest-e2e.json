{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@/(.*)$": "<rootDir>/src/$1",
    "@test/(.*)$": "<rootDir>/test/$1"
  },
  "collectCoverageFrom": [
    "<rootDir>/src/**/*.ts"
  ],
  "testTimeout": 20000,
  "setupFiles": ["<rootDir>/test/set-env-vars.ts"]
}
